                                                <td colspan="3" class="text-right">wallet ballance</td>
                                              <td>      <b style="color: rgb(108, 214, 143);">₹ <%= wallet  %> </b></td>                                          
                                            </tr>

                                            <tr>
                                                <td colspan="3" class="text-right">you need to pay</td>
                                              <td>      <b>₹<%= totalPrice %>  </b></td>                                          
                                            </tr>
