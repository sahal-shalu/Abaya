                                            <input type="text" value="<%= couponcode  %>"  style="height: 0; visibility: hidden;" name="couponcode">
                                            <% } %>
                                            <tr>
                                                <td colspan="3" class="text-right">Discount</td>
                                              <td>      <b style="color: rgb(108, 214, 143);">₹ <%= cashback  %> </b></td>                                          
                                            </tr>

                                            <tr>
                                                <td colspan="3" class="text-right">After Applying Coupon</td>
                                              <td>      <b>₹<%= couponPrice %>  </b></td>                                          
                                            </tr>
                                        <% } %>
