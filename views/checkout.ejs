                                        <tr>
                                            <th class="text-left">Product Name</th>
                                            <th>Price</th>           
                                            <th>Qty</th>
                                            <th>Subtotal</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% product.forEach((item,index)=>{%>
                                        <tr>
                                            <td class="text-left"><%= item.name %> </td>
                                            <td>₹<%= item.price %> </td>                                         
                                            <td><%=cart[index].quantity%></td>
                                            <td>₹<%=item.price * cart[index].quantity%></td>
                                        </tr>
                                        <% }) %>                                       
                                    </tbody>
