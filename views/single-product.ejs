              <img id="main-image" src="<%=product.mainImage.url%>" width="250" data-action="zoom" /> 
            </div>
            <div class="product__details__slider__content">
              <div class="thumbnails text-center" style="display: flex; flex-direction: column;">
                <% product.sideImage.forEach(item => { %>
                  <div class="thumbnail" style="margin-bottom: 10px;">
                    <img onclick="change_image(this)" src="<%= item.url %>" width="70" data-action="zoom">
                  </div>
                <% }) %>    
              </div>
            </div>
          </div>
        </div>

        
        
        <div class="col-lg-6">
          <div class="product__details__text">
