<div class="container mt-5 mb-5">
  <div class="row d-flex justify-content-center">
      <div class="col-md-10">
          <div class="card">
              <div class="row">
                div class="col-md-6" style="float:top;
                  width: 50%;">
                      
                          <div class="mt-4 mb-3"> <span class="text-uppercase text-muted brand"><%= product.brand %></span>
                              <h5 class="text-uppercase"> <%= product.name %></h5>
                              
                              <div class="price d-flex flex-row align-items-center"> <span class="act-price">MRP</span>
                                  <div class="ml-2"> <small class="dis-price"><%= product.mrp %></small> <span>₹<%= product.price %> </div>
                              </div>
                          </div>
                          <p class="about"><%= product.description %></p>
                         
                          <div class="cart-wishlist" style="justify-content: center;">
                            <a href="/addto-cart/<%=product._id%>" class="add to cart" style="text-decoration: none; color: black;font-size: xx-large;"><i class="ri-shopping-cart-2-fill"></i></a>
                            <% if(wish) {%>
                              <a href="/remove-wishlist/<%= product._id %> "class="add to whishlist" style="color: red;text-decoration: none;font-size: xx-large;"><i class="ri-heart-fill"></i></a>
                              <% }else{ %>
                                <a href="/addto-wishlist/<%= product._id %> "class=" add to whishlist" style="color: black;text-decoration: none;font-size: xx-large;"><i class="ri-heart-fill"></i></a> 
                                <% } %>
                          </div>
                      </div>
                  <div class="col-md-12">
                      <div class="images p-3">
                          <div class="text-center p-4"> <img id="main-image" src="<%=product.mainImage.url%>" width="250" /> </div>
                          <div class="thumbnails text-center">
                            <% product.sideImage.forEach(item => { %>
                              <div class="thumbnail" style="display: inline-block; margin-right: 10px;">
                                <img onclick="change_image(this)" src="<%= item.url %>" width="70">
                              </div>
                            <% }) %>
                            
                          </div>
                         
                  </div>
                  
                  <div class="col-md-6" style="float:top;
                  width: 50%;">
                      
                          <div class="mt-4 mb-3"> <span class="text-uppercase text-muted brand"><%= product.brand %></span>
                              <h5 class="text-uppercase"> <%= product.name %></h5>
                              
                              <div class="price d-flex flex-row align-items-center"> <span class="act-price">MRP</span>
                                  <div class="ml-2"> <small class="dis-price"><%= product.mrp %></small> <span>₹<%= product.price %> </div>
                              </div>
                          </div>
                          <p class="about"><%= product.description %></p>
                         
                          <div class="cart-wishlist" style="justify-content: center;">
                            <a href="/addto-cart/<%=product._id%>" class="add to cart" style="text-decoration: none; color: black;font-size: xx-large;"><i class="ri-shopping-cart-2-fill"></i></a>
                            <% if(wish) {%>
                              <a href="/remove-wishlist/<%= product._id %> "class="add to whishlist" style="color: red;text-decoration: none;font-size: xx-large;"><i class="ri-heart-fill"></i></a>
