  <!-- Header Section End -->

  <!-- Shop Section Begin -->
  <section class="shop spad">
    <div class="container">
      <div class="row">
        <div class="col-lg-3">
          <div class="shop__sidebar">
            <div class="shop__sidebar__search">
              <form role="search" method="post" action="/search-product">
                <input
                  type="search"
                  name="name"
                  placeholder="Search"
                  style="border-radius: 10px"
                />
                <button type="submit"><span class="icon_search"></span></button>
              </form>
            </div>
            <div class="shop__sidebar__accordion">
              <div class="accordion" id="accordionExample">

                <div class="single_sedebar mb-2">
                  <div class="select_option">
                      <div class="select_option_list">Category</div>
                  </div>
              </div>

                <form action="/filter-product" method="get">
                  <label for="SortBy" class="hidden"></label>

                  <select
                    name="filterBy"
                    id="SortBy"
                    class="filters-toolbar_input filters-toolbar_input--sort"
                  >
                    <option value="title-ascending" selected="selected">
                      filter
                    </option>
                    <% if (typeof categories !== "undefined") { %>
                     
                      <% categories.forEach(item=>{ %> <% if(item.status ==
                    "available"){ %>
                    <option value="<%= item.category %>">
                      <%= item.category %>
                    </option>
                    <% } %> <% }) %> <% } %>
                  </select>

                  <button type="submit" class="btn btn-secondary btn--small">
                    Filter
                  </button>
                </form>

                <div class="single_sedebar mt-5">
                  <div class="select_option">
                      <div class="select_option_list">Price</div>
                  </div>
              </div>
                <div  class="single_sedebar" style="margin-top: 5px">
                  <form  action="/sort-product" method="get">
                    <label for="SortBy" id="SortBy"></label>

                    <select name="SortBy" class="select_option" id="">
                      <option value="sort">sort</option>
                      <option value="low-high">low to high</option>
                      <option value="high-low">high-low</option>
                    </select>
                    <button type="submit" class="btn btn-secondary btn--small">
                    Sort
                  </button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-9">
          <div class="row">
  <% products.forEach(item => { %>
    <% if (item.status == "available") { %>
      <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
        <div class="single_product_item">
          <a href="/single-product/<%= item._id %>">
            <img
              style="width: 100%; height: auto; border-radius: 5px"
              src="<%= item.mainImage.url %>"
              class="img-fluid"
            />
          </a>
          <h5 class="my-2"><%= item.name %></h5>
          <p class="font-weight-bold mb-2">â‚¹<%= item.price %></p>
          <a href="/addto-cart/<%= item._id %>" class="btn btn-primary">
            <i class="flaticon-shopping-cart-black-shape"></i> Add to Cart
          </a>
        </div>
      </div>
    <% } %>
  <% }) %>
</div>

<style>
  .single_product_item {
    background-color: #ffffff;
    border: 1px solid #dee2e6;
    border-radius: 5px;
    padding: 10px;
    text-align: center;
  }
  .single_product_item img {
    transition: transform 0.2s ease-in-out;
  }
  .single_product_item:hover img {
    transform: scale(1.1);
  }
  .single_product_item h5 {
    font-size: 18px;
    color: #343a40;
  }
  .single_product_item p {
    font-size: 16px;
    color: #343a40;
  }
  .btn-primary {
    background-color: #007bff;
    border: none;
    font-weight: bold;
  }
  .btn-primary:hover {
    background-color: #0069d9;
  }
  @media (max-width: 767px) {
    .single_product_item {
      padding: 5px;
    }
    .single_product_item img {
      height: 200px;
    }
  }
</style>


          <div class="filter-bar d-flex flex-wrap align-items-center mb-5 ">
                    <div class="pagination ml-auto">
                        <% if ((page+1)>=pageCount && !(pageCount == 0)) { %>
                            <a href="/shop?page=<%= (page-1) %>"
                                class="prev-arrow"><i class="fa fa-long-arrow-left" aria-hidden="true"></i></a>
                            <% } %>
                                <% for( let index=1; index <=pageCount; index++ ) { %>
                                    <a href="/shop?page=<%= (index-1) %>"
                                        <% if ((page+1)==index) { %>
                                        class="active"
                                        <% } %> ><%= index %>
                                    </a>
                                    <% } %>
                                        <% if ((page+1)<pageCount) { %>
                                            <a href="/shop?page=<%= (page+1) %>"
                                                class="next-arrow"><i class="fa fa-long-arrow-right"
                                                    aria-hidden="true"></i></a>
                                            <% } %>
